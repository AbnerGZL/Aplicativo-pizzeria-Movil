<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".DeliveryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#232323"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/logo_happy_pizza"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/happypizza"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="130dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/delivery_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/scooter"
                    android:contentDescription="@string/delivery_icon" />

                <TextView
                    android:id="@+id/delivery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginHorizontal="40dp"
                android:hint="@string/ingresa_tu_direcci_n_de_entrega"
                android:textColor="#000"
                android:background="@drawable/rounded_input_background"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:scrollHorizontally="true" />

            <Button
                android:id="@+id/btn_current_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="40dp"
                android:text="@string/utilizar_mi_ubicaci_n_actual"
                android:backgroundTint="#FFCC00"
                android:textColor="#000"
                android:drawableLeft="@drawable/ubicacion"
                android:padding="12dp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="120dp"
                android:text="@string/siguiente"
                android:backgroundTint="#FFCC00"
                android:textColor="#000"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:menu="@menu/menu_ofertas" />

</LinearLayout>

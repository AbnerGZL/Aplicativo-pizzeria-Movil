<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/back_dev"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/pizzaImage"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:src="@drawable/pizza" />

    <TextView
        android:id="@+id/pizzaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Pizza Name"
        android:textStyle="bold"
        android:layout_toEndOf="@id/pizzaImage"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/pizzaDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Pizza Description"
        android:layout_toEndOf="@id/pizzaImage"
        android:layout_below="@id/pizzaName"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/pizzaPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Pizza Price"
        android:textStyle="bold"
        android:layout_toEndOf="@id/pizzaImage"
        android:layout_below="@id/pizzaDescription"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/comprados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="1 comprados"
        android:layout_toEndOf="@id/pizzaImage"
        android:layout_below="@id/pizzaDescription"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:text="Rastrear pedido"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:backgroundTint="@color/backgraund"
        android:layout_below="@id/pizzaPrice"
        android:layout_marginStart="150dp"
        />

</RelativeLayout>
